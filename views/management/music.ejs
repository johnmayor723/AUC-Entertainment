<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Music</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Manage Music</h1>
    <a href="/management" class="btn btn-secondary mb-3">Back to Dashboard</a>

    <!-- Form to create new music -->
    <form action="/management/music" method="POST" class="mb-4">
      <h4>Add New Music</h4>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input type="text" class="form-control" id="author" name="author" required>
      </div>
      <div class="mb-3">
        <label for="fileUrl" class="form-label">Music File URL</label>
        <input type="text" class="form-control" id="fileUrl" name="fileUrl" required>
      </div>
      <div class="mb-3">
        <label for="fileUrl" class="form-label">Music Artwork url</label>
        <input type="text" class="form-control" id="imageUrl" name="imageUrl" required>
      </div>
      <div class="mb-3">
        <label for="year" class="form-label">Year</label>
        <input type="text" class="form-control" id="year" name="year" required>
      </div>
      <button type="submit" class="btn btn-primary">Add Music</button>
    </form>

    <!-- List of existing music -->
    <h4>Existing Music</h4>
    <div class="row">
      <% music.forEach(song => { %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= song.title %></h5>
              <p class="card-text">Author: <%= song.author %></p>
              <p class="card-text">Year: <%= song.year %></p>
              <a href="<%= song.fileUrl %>" class="btn btn-primary">Listen</a>
              <form action="/management/music/<%= song._id %>" method="POST" class="mt-2">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
