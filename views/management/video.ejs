<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Videos</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Manage Videos</h1>
    <a href="/management" class="btn btn-secondary mb-3">Back to Dashboard</a>
    
    <!-- Form to create a new video -->
    <form action="/management/video" method="POST" class="mb-4">
      <h4>Add New Video</h4>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input type="text" class="form-control" id="author" name="author" required>
      </div>
      <div class="mb-3">
        <label for="fileUrl" class="form-label">File URL</label>
        <input type="text" class="form-control" id="fileUrl" name="fileUrl" required>
      </div>
      <div class="mb-3">
        <label for="fileUrl" class="form-label">Video Artwork URL</label>
        <input type="text" class="form-control" id="fileUrl" name="imageUrl" required>
      </div>
      <div class="mb-3">
        <label for="year" class="form-label">Year</label>
        <input type="text" class="form-control" id="year" name="year" required>
      </div>
      <button type="submit" class="btn btn-primary">Add Video</button>
    </form>
    
    <!-- List of existing videos -->
    <h4>Existing Videos</h4>
    <div class="row">
      <% videos.forEach(video => { %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= video.title %></h5>
              <p class="card-text">Author: <%= video.author %></p>
              <p class="card-text">Year: <%= video.year %></p>
              <a href="<%= video.fileUrl %>" class="btn btn-primary">Watch</a>
              <form action="/management/video/<%= video._id %>" method="POST" class="mt-2">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
              <a class="btn btn-primary" href="/management/video/<%= video._id %>">
               Edit</a>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
