  <div class="container">
    <h1 class="mt-5">Manage Entertainments</h1>
    <a href="/management" class="btn btn-secondary mb-3">Back to Dashboard</a>
    
    <!-- Form to create a new Entertainment -->
    <form action="/management/entertainment" method="POST" class="mb-4">
      <h4>Add New Entertainment</h4>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>
      <div class="mb-3">
        <label for="author" class="form-label">Author</label>
        <input type="text" class="form-control" id="author" name="author" required>
      </div>
      <div class="mb-3">
        <label for="fileUrl" class="form-label">File URL</label>
        <input type="text" class="form-control" id="fileUrl" name="fileUrl" required>
      </div>
      <div class="mb-3">
        <label for="imageUrl" class="form-label">Entertainment Artwork URL</label>
        <input type="text" class="form-control" id="imageUrl" name="imageUrl" required>
      </div>
      <div class="mb-3">
        <label for="year" class="form-label">Year</label>
        <input type="text" class="form-control" id="year" name="year" required>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-control" id="category" name="category" required>
          <option value="Comedy Videos">Comedy Videos</option>
          <option value="AUC Entertainment Videos">AUC Entertainment Videos</option>
          <option value="Street Shows">Street Shows</option>
          <option value="Podcast">Podcast</option>
          <option value="Freestyle">Freestyle</option>
          <option value="News">News</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Add Entertainment</button>
    </form>
    
    <!-- List of existing entertainments -->
    <h4>Existing Entertainments</h4>
    <div class="row">
      <% entertainments.forEach(entertainment => { %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= entertainment.title %></h5>
              <p class="card-text">Author: <%= entertainment.author %></p>
              <p class="card-text">Year: <%= entertainment.year %></p>
              <p class="card-text">Category: <%= entertainment.category %></p>
              <a href="<%= entertainment.fileUrl %>" class="btn btn-primary">Watch</a>
              <form action="/management/entertainment/<%= entertainment._id %>?_method=DELETE" method="POST" class="mt-2">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
              <a class="btn btn-primary" href="/management/entertainment/<%= entertainment._id %>">Edit</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

