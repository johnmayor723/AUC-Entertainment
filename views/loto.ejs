<!-- Lotto Section -->
<section class="lotto-section py-5">
  <div class="container">
    <div class="bg-light rounded shadow p-4 p-md-5 px-md-5" style="max-width: 100%;">
      <h2 class="text-center mb-3">WhatsApp Lotto</h2>

      <form action="/play-loto" method="POST" class="lotto-form">
        <div class="mb-4">
          <label for="name" class="form-label fw-semibold">Name</label>
          <input type="text" name="name" id="name" class="form-control form-control-lg" placeholder="Enter your full name" required>
        </div>

        <!-- Email Field -->
        <div class="mb-4">
          <label for="email" class="form-label fw-semibold">Email</label>
          <input type="email" name="email" id="email" class="form-control form-control-lg" placeholder="Enter your email address" required>
        </div>
         <!-- Phone number Field -->
        <div class="mb-4">
          <label for="email" class="form-label fw-semibold">WhatsApp number</label>
          <input type="string" name="pnumber" id="phone" class="form-control form-control-lg" placeholder="Enter your email address" required>
        </div>

        <p class="text-muted text-center mb-4">
          Pick 6 random numbers for an opportunity to win if 2 winning numbers are guessed correctly.
        </p>

        <div class="row g-3 justify-content-center mb-4">
          <div class="col-4 col-sm-2">
            <input type="number" name="n1" min="1" max="99" class="form-control text-center" required>
          </div>
          <div class="col-4 col-sm-2">
            <input type="number" name="n2" min="1" max="99" class="form-control text-center" required>
          </div>
          <div class="col-4 col-sm-2">
            <input type="number" name="n3" min="1" max="99" class="form-control text-center" required>
          </div>
          <div class="col-4 col-sm-2">
            <input type="number" name="n4" min="1" max="99" class="form-control text-center" required>
          </div>
          <div class="col-4 col-sm-2">
            <input type="number" name="n5" min="1" max="99" class="form-control text-center" required>
          </div>
          <div class="col-4 col-sm-2">
            <input type="number" name="n6" min="1" max="99" class="form-control text-center" required>
          </div>
        </div>

        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-lg px-5">Submit Numbers</button>
        </div>
      </form>
    </div>
  </div>
</section>




